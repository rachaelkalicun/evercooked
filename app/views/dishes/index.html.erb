<p style="color: green"><%= notice %></p>

<% content_for :title, "Dishes" %>

<h1 class="text-green-500">Dishes</h1>

<div id="dishes">
  <% @dishes.each do |dish| %>
    <%= render dish %>
    <p>
      <%= link_to "Show this dish", dish %>
    </p>
  <% end %>
</div>

<% if current_user&.admin? %>
	<%= link_to "New dish", new_dish_path %>
<% end %>
